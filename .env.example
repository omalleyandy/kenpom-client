# KenPom API token (Bearer)
KENPOM_API_KEY="paste_your_key_here"

# Optional: override base URL (default is https://kenpom.com)
KENPOM_BASE_URL="https://kenpom.com"

# HTTP tuning
KENPOM_TIMEOUT_SECONDS=20
KENPOM_MAX_RETRIES=5
KENPOM_BACKOFF_BASE_SECONDS=0.6
KENPOM_RATE_LIMIT_RPS=2

# Cache
KENPOM_CACHE_DIR=".cache/kenpom"
KENPOM_CACHE_TTL_SECONDS=21600   # 6 hours; for archive calls you can set very high

# Output
KENPOM_OUT_DIR="data"